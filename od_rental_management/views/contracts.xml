<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VIEW -->
    <record id="view_contracts_form" model="ir.ui.view">
        <field name="name">contracts.form</field>
        <field name="model">contracts</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="driver_id"/>
                        <field name="vehicle_id"/>
                    </group>
                    <notebook>
                        <page string="Documents">
                            <field name="document_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="file_name"/>
                                    <field name="file" filename="file_name"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_contracts" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">contracts</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_contracts_root" name="Contracts" sequence="10"/>
    <menuitem id="menu_contracts"
              name="Contracts"
              parent="menu_contracts_root"
              action="action_contracts"
              sequence="1"/>
</odoo>
