<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- list VIEW -->
    <record id="vehicles_view_list" model="ir.ui.view">
        <field name="name">vehicles.list</field>
        <field name="model">od_rental_management.vehicles</field>
        <field name="arch" type="xml">
            <list string="Vehicles">
                <field name="name"/>
                <field name="state"/>
                <field name="license_plate"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="vehicles_view_form" model="ir.ui.view">
        <field name="name">vehicles.form</field>
        <field name="model">od_rental_management.vehicles</field>
        <field name="arch" type="xml">
            <form string="Vehicle">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="state"/>
                        <field name="license_plate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
        <record id="calender_view" model="ir.ui.view">
        <field name="name">od_rental_management.vehicles.calendar</field>
        <field name="model">od_rental_management.vehicles</field>
        <field name="arch" type="xml">
            <calendar string="Event Calendar" date_start="start_date" color="name">
                <field name="name"/>
            </calendar>
        </field>
    </record>
    <!-- ACTION -->
    <record id="action_vehicles" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">od_rental_management.vehicles</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_calendar" model="ir.actions.act_window">
        <field name="name">Vehicle</field>
        <field name="res_model">od_rental_management.vehicles</field>
        <field name="view_mode">calendar,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_od_rental_management_root" name="Rental Management" sequence="10"/>
    <menuitem id="menu_vehicles" name="Vehicles" parent="menu_od_rental_management_root" action="action_vehicles"/>
    <menuitem id="menu_calendar" name="Event Calendar" parent="menu_od_rental_management_root" action="action_calendar"/></odoo>
